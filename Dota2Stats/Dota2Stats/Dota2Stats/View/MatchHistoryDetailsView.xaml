<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Dota2Stats.MatchHistoryDetailsView">
  <StackLayout>
    <Label Text="{Binding MatchDetails.match_id}" 
           VerticalOptions="Start" 
           TextColor="Red"/>
    <ListView ItemsSource="{Binding Players}"
              HasUnevenRows="True">
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            <StackLayout>
              <Label Text="{Binding account_id}"/>
              <Label Text="{Binding hero_id}"/>
            </StackLayout>
          </ViewCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </StackLayout>
</ContentPage>