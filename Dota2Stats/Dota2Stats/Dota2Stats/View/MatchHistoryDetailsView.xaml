<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Dota2Stats.MatchHistoryDetailsView">
  <StackLayout>
    <Label Text="{Binding MatchDetails.match_id}" 
           VerticalOptions="Start" 
           TextColor="Red"/>
    <ListView ItemsSource="{Binding Players}"
              HasUnevenRows="True">
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            <ContentView Padding="2">
              <Frame OutlineColor="Teal" 
                     Padding="2">
                <StackLayout Orientation="Horizontal">
                  <!--<ScrollView>-->
                  <Image Source="{Binding PlayerHeroImage}"/>
                  <Label Text="{Binding PersonaName}"/>
                  <!--<Image Source="{Binding PlayerItem0}"/>
                  <Image Source="{Binding PlayerItem1}"/>
                  <Image Source="{Binding PlayerItem2}"/>
                  <Image Source="{Binding PlayerItem3}"/>
                  <Image Source="{Binding PlayerItem4}"/>
                  <Image Source="{Binding PlayerItem5}"/>-->
                  <!--</ScrollView>-->
                </StackLayout>
              </Frame>
            </ContentView>
          </ViewCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </StackLayout>
</ContentPage>