<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Dota2Stats.SearchSteamPersonaResultView">
  <StackLayout>
    <Label Text="{Binding SteamPersona}" 
           TextColor="Red" 
           FontSize="Large"
           VerticalOptions="Start"/>
    <!--<Button Text="DEBUG BUTTON"
            VerticalOptions="Start"
            Command="{Binding GoToPlayerMatchHistoryCmd}"/>-->
    <ListView ItemsSource="{Binding SteamUsers}"
              SelectedItem="{Binding SelectedSteamUser}"
              HasUnevenRows="True">
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            <ContentView Padding="3">
              <Frame OutlineColor="Teal"
                         Padding="2">
                <StackLayout Orientation="Vertical">
                  <Label Text="{Binding Account_Id}"/>
                  <Label Text="{Binding PersonaName}"/>
                </StackLayout>
              </Frame>
            </ContentView>
          </ViewCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </StackLayout>
</ContentPage>