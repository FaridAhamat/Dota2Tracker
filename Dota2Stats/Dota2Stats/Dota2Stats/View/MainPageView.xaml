<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Dota2Stats.MainPageView">
  <StackLayout VerticalOptions="Center"
               HorizontalOptions="CenterAndExpand">
    <StackLayout Orientation="Horizontal">
      <Entry Text="{Binding SteamPersona}"
             Placeholder="Type player's name here..."
             WidthRequest="{Binding EntryWidth}"/>
      <Button Text="GO!"
              Command="{Binding GoToSearchSteamPersonaCmd}"
              WidthRequest="{Binding GoBtnWidth}"/>
    </StackLayout>
    <ActivityIndicator IsRunning="{Binding IsBusy}"
                       IsVisible="{Binding IsBusy}"/>
  </StackLayout>
</ContentPage>