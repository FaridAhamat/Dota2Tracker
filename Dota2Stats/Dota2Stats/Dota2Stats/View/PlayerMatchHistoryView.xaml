<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Dota2Stats.PlayerMatchHistoryView">
  <StackLayout>
    <Label x:Name="debugLabel"/>
    <!--Should show player name here to indicate whose match is this page showing-->
    <!--<Label Text="{Binding SteamPersona}" 
           TextColor="Maroon" 
           FontSize="Large"
           VerticalOptions="Start"/>-->
    <ListView ItemsSource="{Binding PlayerMatchHistory}"
              SelectedItem="{Binding MatchHistory}"
              HasUnevenRows="True">
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            <StackLayout Orientation="Vertical">
              <Label Text="{Binding match_id}"/>
              <Label Text="{Binding radiant_win}"/>
              <Label Text="{Binding duration}"/>
            </StackLayout>
          </ViewCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </StackLayout>
</ContentPage>