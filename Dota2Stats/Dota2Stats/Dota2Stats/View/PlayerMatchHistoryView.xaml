<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Dota2Stats.PlayerMatchHistoryView">
  <StackLayout>
    <Label x:Name="debugLabel"/>
    <StackLayout Orientation="Horizontal">
      <Image Source="{Binding SteamUser.AvatarFull}"/>
      <Label Text="{Binding SteamUser.PersonaName}"
                         FontSize="Large"
                         FontAttributes="Bold"/>
      <!--Add more texts here: example: Winrate, last match, etc-->
    </StackLayout>
    <ListView ItemsSource="{Binding PlayerMatchHistory}"
              SelectedItem="{Binding MatchHistory}"
              HasUnevenRows="True">
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            <ContentView Padding="2">
              <Frame OutlineColor="Teal" 
                     Padding="2">
                <StackLayout Orientation="Vertical">
                  <Label Text="{Binding match_id}"/>
                  <Label Text="{Binding radiant_win}"/>
                  <Label Text="{Binding duration}"/>
                  <Label Text="{Binding player_slot}"/>
                  <Label Text="{Binding hero_id}"/>
                </StackLayout>
              </Frame>
            </ContentView>
          </ViewCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </StackLayout>
</ContentPage>